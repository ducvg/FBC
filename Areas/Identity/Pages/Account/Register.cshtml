</head>
<body class="img js-fullheight" style="background-image: url(/asset/image/welcome_banner.png);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h1 class="heading-section" style="font-family:Prociono">FBookCycle</h1>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Join Our Service</h3>
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                             <div class="form-group">
                                <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="Fullname" required/>
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Name@example.com" required/>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
 
                            <div class="form-group">
                                <input asp-for="Input.Address" class="form-control" autocomplete="address" aria-required="true" placeholder="Address" required/>
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="phonenumber" aria-required="true" placeholder="Phone Number" required/>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div> 

                            <div class="form-group">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" required/>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                             </div>

                            <div class="form-group">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password"  required/>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                             </div>

                             <div class="form-group d-md-flex">
                                 <div class="w-50 text-md-right">
                                     <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have account -></a>
                                 </div>

                             </div>
                            <div class="form-group">
                                <button id="registerSubmit" type="submit" class="form-control btn btn-primary submit px-3">Register</button>
                                
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50 text-md-right">
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot Password</a>
                                </div>
                            </div>
                        </form>
                        <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                            <a asp-controller="Login" asp-action="Login" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Google</a>
                        </div>
                        @if (ViewData["ValidateMessage"] != null)
                        {
                                        <br />
                                        <br />
                                        <label>@ViewData["ValidateMessage"]</label>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
