<div class="container bg-light d-md-flex align-items-center">
    <div class="card box1 shadow-sm p-md-5 p-md-5 p-4">
        <div class="fw-bolder mb-4">
            <span class="fas fa-dollar-sign">
            </span><span class="ps-1">Wallet Detail</span>
        </div>
        <div class="d-flex flex-column">
            <div class="d-flex align-items-center justify-content-between text">
                <span class="">Email</span>
                @* <span class="fas fa-dollar-sign"> *@
                <span class="ps-1">@ViewData["userEmail"]</span>
                @* </span>  *@
            </div>
            <div class="d-flex align-items-center justify-content-between text mb-4">
                <span>Credit</span>
                @* <span class="fas fa-dollar-sign"> *@
                <span class="ps-1">@ViewData["userCredit"] Bookcoin</span>
                @* </span>  *@
            </div>
            <div class="border-bottom mb-4">
                </span><span class="ps-1">Exchange Bookcoin Detail</span>
            </div>
            <div class="d-flex flex-column mb-4">
                <span class="far fa-file-alt text"><span class="ps-2">Invoice ID:</span></span>
                <span class="ps-3">SN8478042099</span>
            </div>
            <div class="d-flex flex-column mb-5">
                <span class="far fa-calendar-alt text"><span class="ps-2">Next payment:</span></span>
                <span class="ps-3">22 july,2018</span>
            </div>
            <div class="d-flex align-items-center justify-content-between text mt-5">
                <div class="d-flex flex-column text">
                    <span>Customer Support:</span>
                    <span>online chat 24/7</span>
                </div>
                <div class="btn btn-primary rounded-circle">
                    <a href="https://www.facebook.com/profile.php?id=61559811297067">
                        <span class="fas fa-comment-alt"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="card box2 shadow-sm">
        <div class="d-flex align-items-center justify-content-between p-md-5 p-4">
            <span class="h5 fw-bold m-0">Payment methods</span>
            <div class="btn btn-primary bar">
                <span class="fas fa-bars"></span>
            </div>
        </div>
        <ul class="nav nav-tabs mb-3 px-md-4 px-2">
            <li class="nav-item">
                <a class="nav-link px-2 active" aria-current="page" href="#">VNPay</a>
            </li>
            @*  <li class="nav-item">
            <a class="nav-link px-2" href="#">Mobile Payment</a>
            </li>
            <li class="nav-item ms-auto">
            <a class="nav-link px-2" href="#">+ More</a>
            </li> *@
        </ul>
        <form asp-controller="Wallet" asp-action="Pay" method="post">
            <div class="px-md-5 px-4 mb-4 d-flex align-items-center">
                @* <div class="btn btn-success me-4">
                <span class="fas fa-plus"></span>
                </div> *@
                <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                    <input type="radio" class="btn-check" name="Amount" id="btnradio1" autocomplete="off" value="10000" checked>
                    <label class="btn btn-outline-primary" for="btnradio1">
                        <span class="pe-1">+</span>
                        10.000
                    </label>
                    <input type="radio" class="btn-check" name="Amount" id="btnradio2" autocomplete="off" value="20000">
                    <label class="btn btn-outline-primary" for="btnradio2">
                        <span class="pe-1">+</span>
                        20.000
                    </label>
                    <input type="radio" class="btn-check" name="Amount" id="btnradio3" autocomplete="off" value="50000">
                    <label class="btn btn-outline-primary" for="btnradio3">
                        <span class="lpe-1">+</span>
                        50.000
                    </label>
                    <input type="radio" class="btn-check" name="Amount" id="btnradio4" autocomplete="off" value="100000">
                    <label class="btn btn-outline-primary" for="btnradio4">
                        <span class="lpe-1">+</span>
                        100.000
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="d-flex flex-column px-md-5 px-4 mb-4">
                        <label for="fullName">Full Name</label>
                        <input type="text" class="form-control" id="fullName" placeholder="Enter your full name" name="FullName">
                    </div>
                </div>
            </div>
            <div class="col-12 mt-4">
                <div class="d-flex flex-column px-md-5 px-4 mb-4">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" rows="5" placeholder="Enter a detailed description of your purchase" name="Description"></textarea>
                </div>
            </div>
            <div class="col-12 px-md-5 px-4 mt-3">
                <div class="btn btn-primary w-100">
                    <button type="submit">Pay</button>
                </div>
            </div>
        </form>

    </div>
</div>