<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FBC</title>
@*     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
 *@    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FBC.styles.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Philosopher' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/a21db75261.js" crossorigin="anonymous"></script>
    <style>
        body{
            min-height: 100vh;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }
        br {
            user-select: none;
        }

        .container-fill {
            min-height: 100%;
            height: 100%;
        }

        .header-nav {
            display: contents;
            list-style: none;
            text-align: center;
        }

        .header-nav a {
            color: black;
            text-decoration: none;
            padding: 0px 10px;
        }

        @@media (min-width: 1666px) {
            .container, .container-xxl {
                max-width: 1555px;
            }
        }

        .footer-top {
            color: white;
        }

        .footer-top ul {
            list-style-type: none;
        }

        .footer-top li:first-child {
            color: lightgreen;
        }

        .footer-top li:not(:last-child) {
            margin-bottom: 10px;
        }

        .footer-top {
            padding: 10px 0;
            background-color: #272727;
        }
        .footer-bottom{
            line-height:25px;
        }
        .navbar {
            margin-bottom: 0;
        }
    </style>
        @RenderSection("Stylesheets", required: false)
    
</head>
<body>
    <header style="font-family:roboto;font-weight:bold" class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <ul class="header-nav">
                    <li class="col-md-3">
                        <div>
                            <a href="/">
                                <img class="me-4" src="~/asset/image/logo_icon.png" height="35px" />
                                <img src="~/asset/image/logo_text.png" height="25px" />
                            </a>
                        </div>
                    </li>
                    <li class="col-md-6">
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            Browse
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a asp-area="" asp-controller="Home" asp-action="About">About</a>
                        <a href="facebook.com">Contact us</a>
                    </li>
                    <li class="col-md-3 d-flex justify-content-around">
                        <div>
                            <i class="fa-regular fa-user"></i>
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                                <a>@User.Identity.Name</a>
                            }
                        </div>
                        
                        <div>
                            <a href="/Cart"><i class="fas fa-shopping-cart"></i></a>
                             &nbsp;
                            0 BookCoin
                        </div>
                    </li>
                </ul>
            </div>
            @if (Context.User.Identity.IsAuthenticated)
            {
                <a asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
            }
        </nav>
    </header>
    <main>
        @RenderBody()
        <br />
        <br />
    </main>
    <footer class="">
        <div class="footer-top">
            <div class="container">
                <hr style="border: 1.5px solid white;opacity: 1;">
                <div class="row">
                    <div class="col-md-4" style="text-align:center">
                        <img src="~/asset/image/logo_blackbg.png" width="69%" style="max-height:150px;width:auto;padding-bottom:10px"/>
                    </div>
                    <div class="col-md-8">
                        <div class="container-fluid container-fill">
                            <div class="container-fill row align-items-center">
                                <div class="col-md-4">
                                    <ul>
                                        <li>Discovery</li>
                                        <li>Categories</li>
                                        <li><a href="/Books">Book List</a></li>
                                        <li>Most Search</li>
                                    </ul>
                                </div>
                                <div class="col-md-4">
                                    <ul>
                                        <li>About</li>
                                        <li>Help</li>
                                        <li>Shipping</li>
                                        <li>Affiliate</li>
                                    </ul>
                                </div>
                                <div class="col-md-4">
                                    <ul>
                                        <li>Info</li>
                                        <li>Contact us</li>
                                        <li>Privacy Policies</li>
                                        <li>Terms & Conditions</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="border-top footer-bottom text-muted">
            <div class="container">
                &copy; 2024 - FBC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
