<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FBC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FBC.styles.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/a21db75261.js" crossorigin="anonymous"></script>

    @RenderSection("Stylesheets", required: false)
    <style>
        br {
            user-select: none;
        }

        .container-fill{
            min-height:100%;
            height:100%;
        }

        .header-nav {
            display: contents;
            list-style: none;
            text-align: center;
        }

            .header-nav a {
                color: black;
                text-decoration: none;
                padding: 0px 10px;
            }

        @@media (min-width: 1666px) {
            .container {
                max-width: 1555px;
            }
        }

        @@media (min-width: 1966px) {
            .container {
                max-width: 1855px;
            }
        }

        @@media (min-width: 2166px) {
            .container {
                max-width: 2055px;
            }
        }
        .footer-top{
            color: white;
        }
        .footer-top ul{
            list-style-type:none;
        }

        .footer-top li:first-child {
            color: lightgreen;
        }
        .footer-top li:not(:last-child){
            margin-bottom:10px;
        }
        .footer-top {
            padding: 10px 0;
            background-color: #272727;
        }
    </style>
</head>
<body>
    <header style="font-family:roboto;font-weight:bold">
        <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <ul class="header-nav">
                    <li class="col-md-3">
                        <a href="/"><img src="~/asset/image/logo.png" height="50px" /></a>
                    </li>
                    <li class="col-md-6">
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            Browse
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a asp-area="" asp-controller="Home" asp-action="About">About</a>
                        <a href="facebook.com">Contact us</a>
                    </li>
                    <li class="col-md-3">
                        <i class="fa-regular fa-user"></i> &nbsp;
                        <i class="fas fa-shopping-cart"></i> &nbsp;
                        0 BookCoin
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    @RenderBody()

    <br />
    <br />
    <div class="footer-top">
        <div class="container">
            <hr style="border: 1.5px solid white;opacity: 1;">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/asset/image/logo_blackbg.png" width="80%"/>
                </div>
                <div class="col-md-8">
                    <div class="container-fluid container-fill">
                        <div class="container-fill row align-items-center">
                            <div class="col-md-4">
                                <ul>
                                    <li>Discovery</li>
                                    <li>Categories</li>
                                    <li>Book List</li>
                                    <li>Most Search</li>
                                </ul>
                            </div>
                            <div class="col-md-4">
                                <ul>
                                    <li>About</li>
                                    <li>Help</li>
                                    <li>Shipping</li>
                                    <li>Affiliate</li>
                                </ul>
                            </div>
                            <div class="col-md-4">
                                <ul>
                                    <li>Info</li>
                                    <li>Contact us</li>
                                    <li>Privacy Policies</li>
                                    <li>Terms & Conditions</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FBC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
