@model FBC.Models.BookOrder

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <link rel="stylesheet" href="style.css">
    <style>
        /* Details container styles */
        .details-container {
            display: flex; /* Arrange header, form, and actions side-by-side */
            flex-direction: column; /* Stack elements vertically */
        }

            /* Header styles */
            .details-container header {
                background-color: #57c592;
                color: #fff; /* White text for header */
                padding: 15px 20px;
                text-align: center;
            }

                .details-container header h1 {
                    margin: 0;
                }

            /* Form container styles */
            .details-container .form-container {
                padding: 20px;
                border-radius: 10px;
                background-color: #f5f5f5; /* Light background for form */
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
                margin-top: 20px; /* Space between header and form */
                flex: 1; /* Make form container take up most available space */
            }

            .details-container .form-row {
                margin-bottom: 15px; /* Spacing between form rows */
            }

            /* Action link container styles */
            .details-container .actions {
                text-align: center;
                margin-top: 20px; /* Space between form and action link */
            }

                /* Action link styles */
                .details-container .actions a {
                    margin: 5px;
                    padding: 10px 20px;
                    border: none;
                    border-radius: 5px;
                    text-decoration: none;
                    color: #fff;
